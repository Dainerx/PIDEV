                        <!-- Section / End -->


                        <!-- Section -->
                        <h3>Vehicule</h3>
                        <div class="submit-section">

                            <!-- Row -->
                            <div class="row with-forms">

                                <!-- Address -->
                                <div class="col-md-6">
                                    <h5>Company</h5>
                                    <input type="text" name="company" required>
                                </div>

                                <!-- City -->
                                <div class="col-md-6">
                                    <h5>Serial</h5>
                                    <input type="text" name="serial" required>
                                </div>

                                <!-- City -->
