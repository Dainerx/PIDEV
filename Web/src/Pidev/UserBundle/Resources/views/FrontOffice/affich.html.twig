{% extends ("@FOSUser/layout.html.twig") %}
{% block title %}Index{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
    {% endblock %}

{% block content %}
    {% block topbody %}
        {{ parent() }}
    {% endblock %}



